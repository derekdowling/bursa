{{ define "content" }}
<div class="page-err err-500">
    <div class="err-container">
        <div class="text-center">
            <div class="err-status">
                 <h1>500</h1>
            </div>
            <div class="err-message">
                <h2>Well That Was Unexpected</h2>
                <p>{{ .Error }}</p>
            </div>
            <div class="err-body">
                <a href="/app" class="btn btn-lg btn-goback btn-info">
                    <span class="glyphicon glyphicon-home"></span>
                    <span class="space"></span>
                    Back to Safety
                </a>
            </div>
        </div>
    </div>
</div>
{{ end }}

{{ define "bodyclass" }}page-simple{{ end }}
